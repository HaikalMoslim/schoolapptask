<% if user_signed_in? %>
<nav>
  <ul class="justify-center flex m-10">
    <li><%= link_to "Students", students_path %></li>
    <li><%= link_to "Teachers", teachers_path %></li>
    <li><%= link_to "Schools", schools_path %></li>
    <% if current_user.role =="teacher" || current_user.role =="admin" %>
    <li><%= link_to 'Manage Enrollments', enrollments_path %></li>
    <% end %>
    <li><%= link_to "Payment", payments_path %></li>
    <li><%= link_to "Fee", fees_path %></li>
    <li><%= button_to "Log Out", destroy_user_session_path, method: :delete %></li>
  </ul>
</nav>
<% else %>
<nav>
  <ul class="justify-center flex m-10">
    <li><%= link_to "Login", new_user_session_path %></li>
    <li><%= link_to "Sign Up", new_user_registration_path %></li>
    
  </ul>
</nav>
<% end %>