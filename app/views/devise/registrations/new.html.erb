<div class="devise-container">
  <h1 class="devise-title">Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="devise-field">
      <%= f.label :name, class: "devise-label" %><br>
      <%= f.text_field :name, class: "devise-input" %>
    </div>

    <div class="devise-field">
      <%= f.label :email, class: "devise-label" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-input" %>
    </div>

    <div class="devise-field">
      <%= f.label :password, class: "devise-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br>
      <%= f.password_field :password, autocomplete: "new-password", class: "devise-input" %>
    </div>

    <div class="devise-field">
      <%= f.label :password_confirmation, class: "devise-label" %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-input" %>
    </div>

    <div class="devise-field">
      <%= f.label :role, class: "devise-label" %><br>
      <%= f.select :role, User.roles.keys, prompt: "Select Role", class: "devise-input" %>
    </div>

    <div class="devise-actions mb-4">
      <%= f.submit "Sign up", class: "devise-submit" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
