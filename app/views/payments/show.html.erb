<div class="container mx-auto p-4">
  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden p-6">
    <div id="<%= dom_id @payment %>">
      <h1 class="font-bold text-2xl mb-4">Payment Details</h1>

      <p>
        <strong>Status:</strong>
        <%= @payment.payment_status %>
      </p>

      <p>
        <strong>Name:</strong>
        <%= @payment.buyer_name %>
      </p>

      <p>
        <strong>Order Number:</strong>
        <%= @payment.order_number %>
      </p>
      
      <p>
        <strong>Payment Method:</strong>
        <%= @payment.payment_method %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @payment.buyer_email %>
      </p>

      <p>
        <strong>Phone Number:</strong>
        <%= @payment.buyer_phone %>
      </p>
      <p>
        <strong>Receipts URL:</strong>
        <%= link_to @payment.receipt_url, @payment.receipt_url %>
      </p>
      <p>
        <strong>Status URL:</strong>
        <%= link_to @payment.status_url, @payment.status_url %>
      </p>
      <p>
        <strong>Total:</strong>
        <%= @payment.transaction_amount %>
      </p>
    </div>

    <div class="flex gap-4 mt-4">
      <%= link_to "Back to payments", payments_path, class: "btn-back" %>
    </div>
  </div>
</div>
