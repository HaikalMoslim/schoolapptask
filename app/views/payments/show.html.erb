<div id="<%= dom_id @payment %>">

    <h1>Payment Details</h1>

    <p>
        <strong>Status:</strong>
        <%= @payment.payment_status %>
    </p>

    <p>
        <strong>Name:</strong>
        <%= @payment.buyer_name %>
    </p>

    <p>
        <strong>Order Number:</strong>
        <%= @payment.order_number %>
    </p>
    
    <p>
        <strong>Payment Method:</strong>
        <%= @payment.payment_method %>
    </p>

    <p>
        <strong>Email:</strong>
        <%= @payment.buyer_email %>
    </p>

    <p>
        <strong>Phone Number:</strong>
        <%= @payment.buyer_phone %>
    </p>
    <p>
        <strong>Receipts URL:</strong>
        <%= link_to @payment.receipt_url, @payment.receipt_url %>
    </p>
    <p>
        <strong>Total:</strong>
        <%= @payment.transaction_amount %>
    </p>

</div>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= link_to "Back to payments", payments_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
